<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment"
    android:background="@color/gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/nightBlack01">
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:src="@raw/filter"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@raw/temsa"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/searchbar"
        android:elevation="2dp"
        android:hint="Search"
        android:layout_marginTop="75dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:completionThreshold="1"
        android:inputType="text"
        />
    <Button
        android:id="@+id/addCard"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Add Machine"
        android:background="@drawable/inputbutton"/>
    <TextView
        android:id="@+id/zone"
        android:text="ZONE X"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_machines"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:listitem="@layout/element"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="50dp"
        android:elevation="0dp"
        />
</RelativeLayout>