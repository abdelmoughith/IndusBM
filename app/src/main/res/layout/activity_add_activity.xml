<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@color/white01"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ImageButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@raw/card_blue"
        android:scaleType="centerCrop"
        android:background="@color/white01"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />
        <TextView
            android:id="@+id/references"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:layout_marginTop="10dp"
            android:text="References :"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/table"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/references"
            android:layout_margin="10dp"
            >
            <TableRow android:layout_margin="10dp">
                <Button
                    android:id="@+id/add_img"
                    android:text="Add Image"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/inputbutton"
                    />
            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="textCapSentences"
                    android:hint="Name*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="numberDecimal|numberSigned"
                    android:hint="Temperature*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text="Â°C"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/puissance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="numberDecimal"
                    android:hint="Powerful*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/watt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text="W"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/vibration"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="numberDecimal"
                    android:hint="Vibration*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/mm_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text="mm/s"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/frequency"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="numberDecimal"
                    android:hint="Frequency*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text="Hz"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/debit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:inputType="numberDecimal"
                    android:hint="Debit*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/kg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text="Kg/h"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow
                android:layout_margin="10dp">
                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="20"
                    android:background="@drawable/input"
                    android:hint="Desctription*"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="20sp"/>

            </TableRow>
            <TableRow android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/image_To_Upload"
                    android:layout_weight="1"
                    android:background="@color/nightBlack03"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    </ScrollView>
        <TextView
            android:id="@+id/by_saving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/scroll_view"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="By saving these informations you create a machine card references related to your email and username."
            android:textColor="@color/gray02"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/by_saving"
        app:layout_constraintBottom_toTopOf="@+id/how_to_save"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:text="full name"
        android:textColor="@color/amber"
        android:textStyle="bold" />
        <TextView
            android:id="@+id/how_to_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_margin="25dp"
            android:text="To save click on the Image Button on the TOP "
            android:textColor="@color/gray02"
            android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>